
<div>
    <h1 class="text-3xl font-bold underline pb-10">Login</h1>
    <form action="/users/login" method="POST" class="flex flex-col grow gap-y-5">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
        <div>
            <label for="username" class="rjs-label">Username</label>
            <input type="text" name="username" class="rjs-input-text">
        </div>
        <div>
            <label for="password" class="rjs-label">Password</label>
            <input type="password" name="password" class="rjs-input-text">
        </div>
        <div>
            <button type="submit">Submit</button>
        </div>
    </form>
</div>